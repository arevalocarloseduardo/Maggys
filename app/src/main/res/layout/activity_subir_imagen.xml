            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtCategory"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="Categoria" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNombrePro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtCategory" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre Producto"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edtPrecio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="172dp" tools:layout_editor_absoluteX="8dp" android:id="@+id/edtPrecio"
            android:hint="Precio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtDesc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPrecio" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="DescripciÃ³n" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mimageView" app:layout_constraintVertical_bias="0.113"/>
